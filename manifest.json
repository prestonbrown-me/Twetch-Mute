{
  "manifest_version": 2,
  "name": "Twetch Mute",
  "version": "1.0",

  "description": "lets you mute/hide accounts on Twetch",

  "icons": {},

  "background": {
    "scripts": ["background.js"]
  },

  "content_scripts": [
    {
      "matches": ["*://twetch.app/*"],
      "js": ["jquery-3.5.1.min.js", "mute.js"]
    }
  ],

  "permissions": [
    "browsingData",
    "notifications",
    "storage"
  ]
}
